{
  "manifest_version": 2,

  "name": "Wealthsimple Realtime",
  "description": "Realtime price for portfolio tickers",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "y16.png",
    "48": "y48.png",
    "128": "y128.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-qfrhMW9eTbaLovJo7vyzLPA2PQa8LfNWL1QWi8ICtw8='; object-src 'self'",
  "permissions": ["*://*.tmx.com/*", "*://*.yahoo.com/*", "*://*.finnhub.io/*"]
}
